<script>
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();

        document.querySelector(this.getAttribute('href')).scrollIntoView({
            behavior: 'smooth'
        });
    });
	});

	document.addEventListener('DOMContentLoaded', () => {
		const scrollArea = document.querySelector("#scroll-area")
		if (!scrollArea) return
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				const isIntersecting = (
					entry.isIntersecting
				) || entry.target.classList.contains('daisy-fixed')
				if (isIntersecting) {
					entry.target.classList.add('daisy-show')
				}
			})
		}, {
			root: scrollArea,
		})
		
		const hiddenElements = document.querySelectorAll('.daisy')
		hiddenElements.forEach(element => {
			observer.observe(element)
		})

		const whatsAppButton : HTMLElement = document.getElementById('whatsapp-btn') as HTMLElement

		document.addEventListener('scroll', (e) => {

			if (whatsAppButton) {
				if (window.scrollY > 100) {
					whatsAppButton?.classList.add('opacity-1')
					whatsAppButton?.classList.remove('opacity-0')
				} else {
					whatsAppButton?.classList.remove('opacity-1')
					whatsAppButton?.classList.add('opacity-0')
				}
			}
		})
		
		scrollArea.addEventListener('scroll', (e) => {
			if (whatsAppButton) {
 				if (scrollArea?.scrollTop > 100) {
					whatsAppButton?.classList.add('opacity-1')
					whatsAppButton?.classList.remove('opacity-0')
				} else {
					whatsAppButton?.classList.remove('opacity-1')
					whatsAppButton?.classList.add('opacity-0')
				}
			}
		})
	})
</script>