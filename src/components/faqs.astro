---
import Collapsible from "./admissions/Collapsible.astro"
import Text from "./system/Text.astro";
import { marked } from 'marked'
import { getEntries, getEntry, type CollectionEntry } from 'astro:content';
const { data } = await getEntry('home', 'home') as CollectionEntry<'home'>

const faqs = data?.faqs || []
---
<div class="flex flex-col items-center gap-5 ">
  {faqs.map(({ question, answer }) => {
    const answerHtml = marked.parse(answer)
    return (
      <Collapsible title={question} titleClass='font-sans font-bold text-xl max-md:text-lg' class='mb-5' collapseGroup='collapsible' plusButtonClass="w-[35px] h-[35px] ml-1">
        <Text type={'regular'} set:html={answerHtml} class="[&_a]:underline [&_a]:text-blue-700"></Text>
      </Collapsible>
    )}
  )}
</div>