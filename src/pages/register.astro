    image: MiddleAndHighBG,
    link: 'https://glentreeacademy.com/curriculum/middle-and-high',
    background: '#6F322E',
    grade: 'Grade V-X',
    points: [
      [               
        "Creative thinking & Research",
        "Community Learning",
        "Language Arts (English, Hindi, Kannada)",
        "Math, Science and ICT",
      ],
      [
