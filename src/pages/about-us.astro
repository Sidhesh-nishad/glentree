---
import Layout from '../layouts/Layout.astro';

import Text from '../components/system/Text.astro';
import BigAdmissionCTA from '../components/BigAdmissionCTA.astro';

import clubsBGimage from '../images/clubs/clubsBGImage.jpeg';

import Button from '../components/system/Button.astro';

import TopNavigationBar from '../components/TopNavigationBar.astro';
import AdmissionMarquee from '../components/campus/admissionMarquee.astro';

import '../global.css'
import GalleryMarquee from '../components/campus/galleryMarquee.astro';
import Footer from '../components/landingPage/Footer.astro';

import preeti from '../images/aboutUs/preeti.png'
import sowmia from '../images/aboutUs/sowmia.png'
import vittal from '../images/aboutUs/vittal.png'
import missionCardBG from '../images/aboutUs/missionCardBG.png'
import cupIcon from '../images/aboutUs/CupIcon.svg'
import art from '../images/clubs/art.png'
import debate from '../images/clubs/debate.png'
import eco from '../images/clubs/eco.png'
import firstFoot from '../images/clubs/firstFoot.png'
import heritage from '../images/clubs/heritage.png'
import math from '../images/clubs/math.png'
import scouts from '../images/clubs/scouts.png'
import science from '../images/clubs/science.png'
import literary from '../images/clubs/literary.png'

const founderDesk = [
  { name: 'Vittal Bhandary', title: 'CEO', image: vittal, message: "Glentree Academy envisions a transformative approach to education, addressing the shortcomings of traditional learning. As a child, I found little joy in the stress of memorisation, yet I thrived in the immersive world of sports. Inspired by my own experiences and Preeti's vision of a happy learning environment, Glentree aims to create a place where children can freely explore their talents and passions without the burden of grades." },
  { name: 'Preeti Bhandary', title: 'DIRECTOR', image: preeti, message: "Research shows that involved parents contribute to happier, healthier, and more successful children. However, in today's fast-paced world, lack of quality parenting time leads to increased pressure on children. We often neglect the present moment, consumed by daily crises. Engaging children in multiple activities is no substitute for parental presence, despite common misconceptions." },
  { name: 'Sowmia Raguraman', title: 'MENTOR PRINCIPAL', image: sowmia, message: "As an educator, my goal is to nurture a growth mindset in children, teaching them to embrace failures as opportunities for progress. I strive to help them measure their advancement effectively, academically and personally. By encouraging a positive attitude towards change and letting go of past negative experiences, we can develop their mature thinking from an early age. This mindset enables them to persevere through setbacks, accept constructive criticism, refine their skills, and view mistakes as stepping stones to success." },
]

const missions = [
  { title: ['Empowering', 'Personal Growth'], image: missionCardBG, icon: cupIcon },
  { title: ['Education with a', 'Global Perspective'], image: missionCardBG, icon: cupIcon },
  { title: ['Focus on', 'Lifelong Learning'], image: missionCardBG, icon: cupIcon },
  { title: ['Always building', 'Resilient Individuals'], image: missionCardBG, icon: cupIcon },
  { title: ['Partnership between', 'Parents - School'], image: missionCardBG, icon: cupIcon },
  { title: ['Education always', 'Improving'], image: missionCardBG, icon: cupIcon },
]
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col h-screen w-screen relative bg-white">
    <div 
      class="flex-1 main-container h-screen w-screen"
      style={{
        overflowY: 'overlay',
        overflowX: 'hidden',
      }}
    >
      <div class='flex flex-col bg-white'>
        <TopNavigationBar />
        <div class='h-[72.6px] w-full bg-black'>
        </div>
  
        <div class='min-h-[350px] max-h-[350px] w-full flex justify-center items-center flex-col max-md:min-h-[350px]' style={{
          background: `linear-gradient(180deg, rgba(18, 18, 18, 0) -21.78%, rgba(0, 0, 0, 0.8) 68.07%), url(${clubsBGimage})`,
          backgroundPosition: 'top center',
          backgroundSize: 'cover'

          // backgroundAttachment: 'fixed',
        }}>
          <Text type={'h2'} class='mt-14 max-md:mt-10'>About Us</Text>
          <Text type={'base'} class='mt-3 text-center max-md:w-[90%]' >Pioneering Excellence: Embracing our mission for a brighter tomorrow</Text>
          <!-- <a href="https://admissions.glentreeacademy.com" target='_blank'>
            <Button class='mt-3'>Apply Now</Button>
          </a> -->
        </div>

        
        <div class='w-full flex flex-row flex-wrap px-[136px]  py-16 gap-5 max-md:px-6 max-md:py-6' style={{
          background: 'linear-gradient(180deg, #000000 0%, #142C1E 108.48%)'
        }}>
          <Text type={'h2'} class='text-white'>From the founder's desk</Text>
          {founderDesk.map((item, index) => (
            <div class='flex flex-row w-full mt-8 items-center max-md:flex-col max-md:items-center max-md:mt-4'>
              <div class='max-w-[360px] w-full h-[410px] mr-[60px] shrink-0 rounded-3xl overflow-hidden max-md:mr-0'>
                <img src={item.image} alt="" class='w-full h-full object-cover' />
              </div>
              <div>
                <Text type={'h3'} class='text-white max-md:mt-4'>{item.name}</Text>
                <Text type={'subtitle'} class='mt-1 font-normal'>{item.title}</Text>
                <Text type={'base'} class='mt-6 max='>{item.message}</Text>
              </div>
            </div>
          ))}
          
        </div>

        <div class='w-full flex flex-col flex-wrap px-20 py-16 gap-5 max-md:px-6 max-md:py-6 bg-white items-center max-'>
          <Text type={'h2'} class='text-black mb-4'>Our <span class='text-accent2'>Mission</span></Text>
          <div class='grid grid-rows-2 grid-cols-3 w-full gap-x-10 gap-y-7 max-md:grid-cols-1'>
            {missions.map(mission => (
              <div class='h-[400px] max-md:h-[320px] bg-red-100 rounded-lg bg-cover bg-center p-5 flex flex-col justify-between' style={{
                backgroundImage: `linear-gradient(45deg, rgba(0,0,0, 0.6), rgba(0,0,0, 0.6)), url(${mission.image})`
              }}>
                <div class="w-12 h-12 self-end bg-contain bg-no-repeat" style={{ backgroundImage: `url("${mission.icon}")` }}></div>
                <Text type={'h3'} class='leading-tight text-[32px]'>{mission.title[0]}<br/>
                  <span class='text-yellow'>
                    {mission.title[1]}
                  </span>
                </Text>
              </div>
            ))}            
          </div>
        </div>
        <BigAdmissionCTA />
        <Footer />
    </div>
  </main>
</Layout>
